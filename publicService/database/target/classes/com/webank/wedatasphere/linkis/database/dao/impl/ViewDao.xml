<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.webank.wedatasphere.linkis.database.dao.ViewDao">
    <resultMap id="ViewMap" type="com.webank.wedatasphere.linkis.database.domain.View">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="created" property="created" jdbcType="TIMESTAMP"/>
        <result column="created_by" property="createdBy" jdbcType="VARCHAR"/>
        <result column="updated" property="updated" jdbcType="TIMESTAMP"/>
        <result column="updated_by" property="updatedBy" jdbcType="VARCHAR"/>
        <association column="id" property="dataSource" select="com.webank.wedatasphere.linkis.database.dao.DataSourceDao.getByViewId"/>
        <collection column="id" property="columns" select="com.webank.wedatasphere.linkis.database.dao.ColumnDao.getByViewId"/>
    </resultMap>

    <sql id="View_Column_List">
        name, description, created, created_by, updated, updated_by
    </sql>

    <select id="getById" resultMap="ViewMap">
        select
        id, <include refid="View_Column_List"/>
        from bdp_dataworkcloud_view
        where id = #{0}
    </select>

    <select id="find" resultMap="ViewMap">
        select
        id, <include refid="View_Column_List"/>
        from bdp_dataworkcloud_view
        <where>
            <if test="name != null">name =#{name}</if>
            <if test="owner != null">and created_by = #{owner}</if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id" parameterType="com.webank.wedatasphere.linkis.database.domain.View">
        INSERT INTO bdp_dataworkcloud_view (
        <include refid="View_Column_List"/>
        ) VALUES (
        #{name},#{description},#{created},#{createdBy},#{updated},#{updatedBy}
        )
    </insert>

    <delete id="deleteById">
        DELETE FROM bdp_dataworkcloud_view
        WHERE id = #{id}
    </delete>

    <update id="update">
        UPDATE bdp_dataworkcloud_view
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="description != null">description=#{description},</if>
            <if test="updated != null">updated=#{updated},</if>
            <if test="updatedBy != null">updated_by=#{updatedBy},</if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>